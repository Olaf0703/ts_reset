{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist"]
    },
    "check-exports": {
      "dependsOn": ["build"]
    },
    "lint": {},
    "lint-pkg-json": {},
    "release": {
      "dependsOn": ["build", "check-exports", "lint", "lint-pkg-json"],
      "cache": false
    }
  }
}
